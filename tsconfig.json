{
  "extends": "./tsconfig.base.json",
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.d.ts"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**",
    "**/*.config.ts/**"
  ],
  "compilerOptions": {
    "paths": {
      "@pixel-ui/components": [
        "./packages/components"
      ],
      "@pixel-ui/preset": [
        "./packages/preset"
      ],
      "pixel-ui": [
        "./packages/pixel-ui"
      ]
    }
  }
}
